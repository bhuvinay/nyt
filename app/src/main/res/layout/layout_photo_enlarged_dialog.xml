<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:id="@+id/rl_enlarged_view"
    android:layout_height="260dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_user_pic_enlarged"
        android:layout_width="200dp"
        android:layout_height="200dp"

         />

    <Button
        android:id="@+id/bt_take_picture"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_user_pic_enlarged"
        android:text="take picture" />

    <Button
        android:id="@+id/bt_choose_picture"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_pic_enlarged"
        android:layout_toRightOf="@id/bt_take_picture"
        android:text="choose picture" />
</RelativeLayout>